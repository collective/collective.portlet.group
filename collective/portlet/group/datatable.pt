<tal:table define="groups view/getGroups">
<table id="group-datatable">
    <thead>
        <tr>
            <th>Select Group</th>
            <th>Group Name</th>
        </tr>
    </thead>
    <tbody>
        <tr tal:repeat="group groups">
            <td><input type="radio" tal:attributes="value group/id; name view/name"/></td>
            <td tal:content="group/title"></td>
        </tr>
    </tbody>
</table>
</tal:table>

<script type="text/javascript">
jq(document).ready(function() {
    jq('#group-datatable').dataTable();
} );
</script>
